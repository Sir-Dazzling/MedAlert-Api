{
  "name": "medalertapi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "yarn rimraf dist && tsc",
    "watch": "yarn rimraf dist && tsc -w",
    "start": "node dist/src/index.js",
    "dev": "nodemon dist/src/index.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "fix": "eslint ./src --ext .ts, --fix",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check \"**/*.{ts,tsx,js,jsx}\" --ignore-path .prettierignore",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "format": "prettier --write \"**/*.{ts,tsx,js}\"",
    "test-all": "yarn run check-types && yarn run check-lint && yarn run build",
    "generate-migration": "yarn build && npx typeorm-ts-node-esm migration:generate src/migrations/migration -d src/constants/data-source.ts",
    "run-migrations": "yarn build && npx typeorm-ts-node-esm migration:run -d src/constants/data-source.ts",
    "revert-migrations": "yarn build && npx typeorm-ts-node-esm migration:revert -d src/constants/data-source.ts",
    "seed:config": "yarn build && ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "yarn build && ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "clear:dev": "yarn build && npx typeorm-ts-node-esm schema:drop -d src/constants/data-source.ts && npx typeorm-ts-node-esm migration:run -d src/constants/data-source.ts && ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "test": "jest  --runInBand  --testTimeout=10000 --detectOpenHandles"
  },
  "compilerOptions": {
    "skipLibCheck": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^7.4.0",
    "@googlemaps/google-maps-services-js": "^3.3.16",
    "apollo-server-express": "^3.10.1",
    "argon2": "^0.28.7",
    "axios": "^0.27.2",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.29.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.17.3",
    "graphql": "^15.8.0",
    "ioredis": "^5.2.2",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "prettier-eslint": "^15.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typeorm": "^0.3.7",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^8.3.2",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.3",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/express-handlebars": "^6.0.0",
    "@types/faker": "^6.6.9",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.7.5",
    "@types/uuid": "^8.3.4",
    "husky": "^8.0.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "type-graphql": "^1.1.1",
    "typescript": "^4.7.4"
  }
}
